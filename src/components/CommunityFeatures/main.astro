---
import Title from "../Title.astro";
import Feature from "./Feature.astro";

const communityFeaturesIconSrc = "./community-features/icons"
---
<section class="community-features-section">
    <Title className="community-feautures-title" title="Join our vibrant community of space enthusiasts where you can"></Title>
    <Feature subtitle="Astronomy 101" srcIcon=`${communityFeaturesIconSrc}/astronomy-icon.svg` iconAlt="Astronomy 101 Icon" description="Dive into the basics of astronomy. Learn about stars, planets, galaxies, and the tools astronomers use to explore the universe."></Feature>
    <Feature subtitle="Latest Discoveries" srcIcon=`${communityFeaturesIconSrc}/discoveries-icon.svg` iconAlt="Latest Discoveries Icon" description="Stay up-to-date with the most recent breakthroughs and discoveries in the field of astrophysics and space exploration."></Feature>
    <Feature subtitle="Space Exploration" srcIcon=`${communityFeaturesIconSrc}/space-exploration-icon.svg` iconAlt="Space Exploration Icon" description="Explore the latest missions, both past and present, from NASA, ESA, SpaceX, and other space agencies and organizations."></Feature>
    <Feature subtitle="Space Technology" srcIcon=`${communityFeaturesIconSrc}/space-technology-icon.svg` iconAlt="Space Tech Icon" description="Delve into the cutting-edge technology powering space exploration, from spacecraft and telescopes to propulsion systems."></Feature>
</section>
<style is:global>
	@media (max-width: 800px) {
        .community-features-section {
            margin-bottom: 50px;
            display: grid;
            gap: 20px;
        }
        .community-feautures-title {
            max-width: 650px;
        }
    }
    @media (min-width: 800px) and (max-width: 1059px) {
        .community-features-section {
            margin-bottom: 50px;
            display: grid;
            grid: repeat(3, 1fr) / repeat(2, 1fr);
            align-items: center;
            gap: 10px;
        }
        .community-feautures-title {
            max-width: 650px;
            grid-column: 1 / 3;
        }
    }

	@media (min-width: 1060px) and (max-width: 1919px) {
        .community-feautures-title {
            max-width: 375px;
            grid-column: 1 / 3;
            grid-row: 1 / 3;
        }
        .community-features-section {
            display: grid;
            grid: 1fr 1fr / 15% 15% 1fr 1fr;
            column-gap: 10px;
            /* margin: 30px 0px  */
        }
    }
    
	@media (min-width: 1920px) { 
           
    }
</style>
