---
interface Props {
	className?: string;
}
const { className } = Astro.props;
const imgRoot = "./hero-section/img";
---
<div class=`astronaut-stats-section ${className}`>
    <img class=`mobile-astronaut-stats` src=`${imgRoot}/mobile-astronaut-stats.png` alt="An image of girl in a spacial suit">
    <img class=`tablet-astronaut-stats` src=`${imgRoot}/tablet-astronaut-stats.svg` alt="An image of girl in a spacial suit">
    <img class=`desk-astronaut-stats` src=`${imgRoot}/desk-astronaut-stats.svg` alt="An image of girl in a spacial suit">
</div>
<style>
    .mobile-astronaut-stats, .tablet-astronaut-stats, .desk-astronaut-stats {
        display: none;
    }

    @media (max-width: 1059px) {
        .mobile-astronaut-stats {
            width: 300px;
            height: 440px;
            display: block;
        }
    }

	@media (min-width: 1060px) and (max-width: 1919px) {
        .tablet-astronaut-stats {
            width: 511px;
            height:600px;
            display: block;
            min-width: 154px;
        }
    }
    
	@media (min-width: 1920px) { 
        .desk-astronaut-stats {
            display: block;
            min-width: 205px;
        }
    }
</style>