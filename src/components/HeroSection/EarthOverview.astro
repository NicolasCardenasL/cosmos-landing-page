---
import AstronautStats from "./AstronautStats.astro";
interface Props {
	spanMessage: string;
}
const { spanMessage } = Astro.props;
---
<section class="earth-overview-section">
    <div class="img-wrap">
        <span class="wonder-span">{spanMessage}</span>
    </div>
    <!-- <AstronautStats className="astronaut-stats"></AstronautStats> -->
</section>

<style is:global>
    /* AstronautStats should not be showed under 360px (which is the image min width) */
    @media (max-width: 360px) {
        .astronaut-stats {
            display: none;
        }
    }
    @media (max-width: 1059px) {
        .astronaut-stats {
            /* position: absolute;
            left: 50%;
            bottom: 0; */
            margin-top: 60px;
        }
        .wonder-span {
            font-size: var(--font-size-large);
            line-height: var(--line-height-large);
            max-width: 300px;
        }
        .img-wrap {
            padding: 24px; 
            max-width: 100%;
            height: 381px;
            width: 100dvw;
            background-image: url("./src/components/HeroSection/img/mobile-earth-view.png");
            background-size: cover;
            background-position: 10%;
            flex-direction: column;
        }
    }
    
	@media (min-width: 1060px) and (max-width: 1919px) {
        .img-wrap {
            opacity: 1;
            max-width: 947px;
            height: 381px;
            width: 100dvw;
            border-radius: 40px;
            background-image: url("./src/components/HeroSection/img/tablet-earth-view.png");
            background-size: cover;
        }
    }
    
	@media (min-width: 1920px) { 
        
    }
    
    .wonder-span {
        font-weight: var(--font-weight-bold);
        color: var(--color-text-white);
    }
</style>