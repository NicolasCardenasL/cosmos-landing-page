---
interface Props {
	mobileImgSrc: string;
	tabletImgSrc: string;
	deskImgSrc: string;
}
const { mobileImgSrc, tabletImgSrc, deskImgSrc } = Astro.props;
---
<section class="planet-overview-section">
    <div class="img-wrap">
        <slot></slot>
    </div>
</section>

<style define:vars={{ mobileImgSrc, tabletImgSrc, deskImgSrc }}>
    .planet-overview-section {
    }
    
    @media (max-width: 1059px) {
        .planet-overview-section {
            position: relative;
            height: 430px;
            width: 100dvw;
        }
        .img-wrap {
            padding: 24px; 
            max-width: 100%;
            /* height: 381px; */
            /* width: 100dvw; */
            position: fixed;
            left: 0px;
            background-image: url(var(--mobileImgSrc));
            background-size: cover;
            background-position: 10%;
            flex-direction: column;
        }
    }
    
	@media (min-width: 1060px) and (max-width: 1919px) {
        .img-wrap {
            opacity: 1;
            max-width: 947px;
            height: 381px;
            width: 100dvw;
            border-radius: 40px;
            background-image: url(var(--tabletImgSrc));
            background-size: cover;
        }
    }
    
	@media (min-width: 1920px) { 
        
    }
</style>