---
import Subtitle from "../Subtitle.astro";
import Text from "./../Text.astro"
interface Props {
	title: string;
	stepNumber: string;
    description: string;
}
const { title, stepNumber, description } = Astro.props;
---

<article class="feature">
    <Text text={stepNumber} className="step-number"></Text>
    <Subtitle className="feature-subtitle" subtitle={title}></Subtitle>
    <Text className="feature-description" text={description}></Text>
</article>

<style is:global>
    .feature {
        padding: 0 15px;
        background-color: white;
        display: grid;
        box-shadow: 0px 20px 39px -12px #63757C33;
        border-radius: 20px;
    }
    .step-number {
        color: var(--soft-blue);
    }
    @media (max-width: 1059px) {
        .feature {
            width: 100%;
        }
        .step-number {
            font-size: 32px;
            font-weight: 800;
            line-height: 40.32px;
            margin: 0;
        }
    }
    
	@media (min-width: 1060px) and (max-width: 1919px) {
        .feature {
            width: 70%;
            height: 260px;
            padding: 25px;
            display: flex;
            flex-direction: column;
            justify-items: center;
        }
        .step-number {
            font-size: 32px;
            font-weight: 800;
            line-height: 40.32px;
            margin: 0px;
        }
        .feature-description {
            margin: 0;
        }
        .feature-subtitle {
            margin: 15px 0;
        }
    }
    
	@media (min-width: 1920px) { 
        
    }
</style>