---
import Subtitle from "../Subtitle.astro";
import Text from "./../Text.astro"
interface Props {
	title: string;
	stepNumber: string;
    description: string;
    className?: string;
}
const { title, stepNumber, description, className } = Astro.props;
---

<article class=`resource-card ${className}`>
    <Text text={stepNumber} className="step-number"></Text>
    <Subtitle className="subtitle" subtitle={title}></Subtitle>
    <Text className="description" text={description}></Text>
</article>
<style is:global>
    .resource-card {
        background-color: white;
        border-radius: 20px;
        box-shadow: 0px 20px 39px -12px #63757C33;
        display: grid;
        grid-template-rows: repeat(2, 24%) 1fr;
        align-items:center;
    }
    .step-number {
        color: var(--soft-blue);
        margin: 0;
    }
    .description {
        margin: 0;
    }
    @media (width <= 740px) {
        .resource-card {
            padding: 15px;
            width: 287px;
            height: 258px;
        }
        .subtitle{
            max-width: 250px;
        }
        .step-number {
            font-size: 30px;
            font-weight: 800;
            line-height: 40.32px;
        }
    }
    @media (740px < width <= 1060px) {
        .subtitle{
            max-width: 250px;
        }
        .resource-card {
            padding: 15px;
            width: 327px;
            height: 250px; 
        }
        .step-number {
            font-size: 32px;
            font-weight: 800;
            line-height: 40.32px;
        }
    }
    
	@media (min-width: 1061px) and (max-width: 1919px) {
        .resource-card {
            width: calc(267px - 25px);
            height: 282px;
            padding: 25px;
            display: flex;
            flex-direction: column;
            justify-items: center;
        }
        .step-number {
            font-size: 32px;
            font-weight: 800;
            line-height: 40.32px;
        }
        .subtitle {
            margin: 15px 0;
        }
    }
    
	@media (min-width: 1920px) { 
        
    }
</style>