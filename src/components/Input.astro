---
interface Props {
	className?: string;
	bgColor: string;
	textColor: string;
    placeHolder: string;
}
const { className, bgColor, textColor, placeHolder } = Astro.props;
---

<input class={className} placeholder={placeHolder}>
</input>

<style define:vars={{ bgColor, textColor}}>
    input {
        background-color: var(--bgColor);
        color: var(--textColor);
        border: none;
        /* display: flex; */
        /* align-items: center; */
    }
	@media (max-width: 1919px) {
        input {
            border-radius: 16px;
            padding: 22px 24px;
        }
    }
    
	@media (min-width: 1920px) { 
        
    }
</style>